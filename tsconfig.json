{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2017", "es7", "es6", "dom"],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "rootDir": "./",
    "paths": {
      "@utils/*": ["src/utils/*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*", "tests/**/*"]
}
